datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id             String   @id @default(uuid())
  postId         String   @unique
  type           String
  protocol       String @default("MAP")
  content        Json
  timestamp      DateTime
  sequence       Int
  parentSequence Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  voteQuestion VoteQuestion?
  voteOptions  VoteOption[] @relation("PostVoteOptions")
  lockLikes    LockLike[]   @relation("PostLockLikes")

  @@index([postId])
}

model VoteQuestion {
  id           String   @id @default(uuid())
  postId       String   @unique
  question     String
  totalOptions Int
  optionsHash  String
  protocol     String @default("MAP")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  post        Post         @relation(fields: [postId], references: [postId])
  voteOptions VoteOption[] @relation("VoteQuestionOptions")

  @@index([postId])
}

model VoteOption {
  id           String   @id @default(uuid())
  postId       String
  index        Int
  content      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  post         Post         @relation("PostVoteOptions", fields: [postId], references: [postId], map: "VoteOption_post_fkey")
  voteQuestion VoteQuestion @relation("VoteQuestionOptions", fields: [postId], references: [postId], map: "VoteOption_question_fkey")
  lockLikes    LockLike[]   @relation("VoteOptionLockLikes")

  @@unique([postId, index])
  @@index([postId])
}

model LockLike {
  id             String      @id @default(cuid())
  txid           String      @unique
  amount         Int
  lockPeriod     Int
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  // Optional relations to either Post or VoteOption
  postId         String?
  voteOptionId   String?
  post           Post?       @relation("PostLockLikes", fields: [postId], references: [id])
  voteOption     VoteOption? @relation("VoteOptionLockLikes", fields: [voteOptionId], references: [id])

  @@index([createdAt])
  @@index([postId])
  @@index([voteOptionId])
}
