generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post {
  id             String        @id @default(dbgenerated("gen_random_uuid()"))
  txid           String        @unique
  content        String
  author_address String?
  media_type     String?
  block_height   Int?
  raw_image_data Bytes?
  unlock_height  Int?
  description    String?
  created_at     DateTime      @default(now())
  tags           String[]      @default([])
  metadata       Json?
  is_locked      Boolean       @default(false)
  lock_duration  Int?
  is_vote        Boolean       @default(false)
  vote_options   VoteOption[]
  lock_likes     LockLike[]

  @@index([txid])
  @@index([author_address])
  @@index([block_height])
  @@index([created_at])
  @@index([created_at, id])
  @@index([is_locked, created_at])
}

model VoteOption {
  id             String   @id @default(dbgenerated("gen_random_uuid()"))
  txid           String   @unique
  content        String
  author_address String?
  created_at     DateTime @default(now())
  lock_amount    Int      @default(0)
  lock_duration  Int      @default(0)
  unlock_height  Int?
  tags          String[] @default([])
  post_id       String
  post          Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@index([txid])
  @@index([post_id])
}

model LockLike {
  id             String   @id @default(dbgenerated("gen_random_uuid()"))
  txid           String   @unique
  author_address String?
  amount         Int      @default(0)
  lock_duration  Int      @default(0)
  unlock_height  Int?
  created_at     DateTime @default(now())
  post_id        String
  post           Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@index([txid])
  @@index([post_id])
  @@index([author_address])
}

model ProcessedTransaction {
  id          String   @id @default(dbgenerated("gen_random_uuid()"))
  txid        String   @unique
  blockHeight Int      @default(0)
  blockTime   BigInt   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  protocol    String   @default("MAP")
  type        String   @default("unknown")
  metadata    Json

  @@index([txid])
  @@index([type])
  @@index([protocol])
  @@index([blockHeight])
}
