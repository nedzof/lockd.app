datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id             String   @id @default(uuid())
  postId         String   @unique
  type           String
  protocol       String @default("MAP")
  content        Json
  timestamp      DateTime
  sequence       Int
  parentSequence Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  voteQuestion VoteQuestion?
  voteOptions  VoteOption[] 
  lockLikes    LockLike[]   @relation("PostLockLikes")

  @@index([postId])
}

model VoteQuestion {
  id           String   @id @default(uuid())
  postId       String   @unique
  question     String
  totalOptions Int
  optionsHash  String
  protocol     String @default("MAP")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  post        Post         @relation(fields: [postId], references: [postId])
  voteOptions VoteOption[] 

  @@index([postId])
}

model VoteOption {
  id              String   @id @default(uuid())
  postId          String
  voteQuestionId  String
  index           Int
  content         String
  protocol        String   @default("MAP")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  post         Post         @relation(fields: [postId], references: [postId])
  voteQuestion VoteQuestion @relation(fields: [voteQuestionId], references: [id])
  lockLikes    LockLike[]   @relation("VoteOptionLockLikes")

  @@unique([voteQuestionId, index])
  @@index([voteQuestionId])
  @@index([postId])
}

model LockLike {
  id             String      @id @default(cuid())
  txid           String      @unique
  amount         Int
  lockPeriod     Int
  isProcessed    Boolean     @default(false)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  postId         String?
  voteOptionId   String?
  post           Post?       @relation("PostLockLikes", fields: [postId], references: [id])
  voteOption     VoteOption? @relation("VoteOptionLockLikes", fields: [voteOptionId], references: [id])

  @@index([createdAt])
  @@index([postId])
  @@index([voteOptionId])
  @@index([isProcessed])
}

model ProcessedTransaction {
  id        String   @id @default(uuid())
  txid      String   @unique
  timestamp DateTime @default(now())

  @@index([txid])
  @@index([timestamp])
}
